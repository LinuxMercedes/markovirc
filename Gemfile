source 'https://rubygems.org'

# IRC backend
gem 'cinch'

# PostgreSQL backend
gem 'pg'

# Connection pool for PG
gem 'connection_pool'

# Our YAML processor
gem 'settingslogic'

# Threadsafe data structures, currently only for logging
gem 'thread_safe'

# Source.rb color rotator
gem 'color-generator'

# Source.rb runs off sinatra
gem 'sinatra'

# Source.rb / !src encode in json
gem 'json'

# Handles queued sentences for processing
gem 'rufus-scheduler'

# Handles worker pool
gem 'workers'
